{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src", "postcss.config.cjs"],
  "exclude": ["node_modules", "dist"]
}